{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) test_mem_alloc起動",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/test_mem_alloc/test_mem_alloc",
            "args": [
                "--gtest_catch_exceptions=0",
                // "--gtest_repeat=100",
                // "--gtest_filter=lfmemAlloc.TestChunkHeaderMultiSlot_MT_at_same_time"
                "--gtest_filter=lfmemAlloc_prune.TestAllocFreeBwMultThread1"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "逆アセンブリ フレーバーを Intel に設定",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make all and build test"
        },
    ]
}